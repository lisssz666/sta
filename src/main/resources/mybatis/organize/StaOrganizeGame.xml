<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.project.game.organize.mapper.StaOrganizeGameMapper">
    <resultMap type="StaOrganizeGameEntity" id="StaOrganizeGameResult">
        <result property="id"              column="id"/>
        <result property="preRemark"       column="pre_remark"/>
        <result property="teams"           column="teams" typeHandler="com.baomidou.mybatisplus.extension.handlers.JacksonTypeHandler"/>
        <result property="postRemark"      column="post_remark"/>
        <result property="createBy"        column="create_by"/>
        <result property="createTime"      column="create_time"/>
        <result property="updateBy"        column="update_by"/>
        <result property="updateTime"      column="update_time"/>
    </resultMap>
    <!-- 基础字段 -->
    <sql id="Base_Column_List">
        id, pre_remark, teams, post_remark,
        create_by, create_time, update_by, update_time
    </sql>

    <select id="selectAllList"  parameterType="StaOrganizeGameEntity" resultMap="StaOrganizeGameResult" >
        SELECT <include refid="Base_Column_List"/>
        FROM sta_organize_game
        ORDER BY create_time DESC
    </select>

    <insert id="insert" parameterType="StaOrganizeGameEntity">
        INSERT INTO sta_organize_game
        (pre_remark, teams, post_remark,
        create_by, create_time, update_by, update_time)
        VALUES
        (#{preRemark}, #{teams, typeHandler=com.baomidou.mybatisplus.extension.handlers.JacksonTypeHandler}, #{postRemark},
        #{createBy}, #{createTime}, #{updateBy}, #{updateTime})
    </insert>


    <delete id="deleteById" parameterType="long">
        DELETE FROM sta_organize_game WHERE id = #{id}
    </delete>
    
    <select id="selectById" parameterType="long" resultMap="StaOrganizeGameResult">
        SELECT <include refid="Base_Column_List"/>
        FROM sta_organize_game
        WHERE id = #{id}
    </select>

</mapper>